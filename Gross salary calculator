#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

int B;
    float HRA, DA,gross;
    scanf("%d",&B);
    if(B<=10000){
        HRA=(20.0/100.0)*B;
        DA=(30.0/100.0)*B;
        gross=B+HRA+DA;
        printf("%.2f\n",gross);
    }
    else if(B<=20000&& B>10000){

        HRA=(25.0/100.0)*B;
        DA=(40.0/100.0)*B;
        gross=B+HRA+DA;
     printf("%.2f\n",gross);
    }
    else if(B>20000){

        HRA=(30.0/100.0)*B;
        DA=(50.0/100.0)*B;
        gross=B+HRA+DA;
        printf("%.2f\n",gross);
            
    }
        
    return 0;
}
